<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>ceylon</groupId>
        <artifactId>modules</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>ceylon</groupId>
    <artifactId>modules-testuite</artifactId>
    <packaging>jar</packaging>
    <version>1.0.0-SNAPSHOT</version>
    <name>Ceylon Modules Testsuite</name>
    <url>http://www.jboss.org/ceylon</url>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <phase>process-test-resources</phase>
                        <configuration>
                            <target>

                                <!-- Language -->
                                <copy file="${user.home}/.ceylon/repo/ceylon/language/${version.com.redhat.ceylon.language}/ceylon.language-${version.com.redhat.ceylon.language}.car"
                                      tofile="../dist/ceylon/language/${version.com.redhat.ceylon.language}/ceylon.language-${version.com.redhat.ceylon.language}.car"/>

                                <!-- Repository -->
                                <copy file="${user.home}/.m2/repository/com/redhat/ceylon/cmr/cmr-spi/${version.com.redhat.ceylon.cmr}/cmr-spi-${version.com.redhat.ceylon.cmr}.jar"
                                      tofile="../dist/com/redhat/ceylon/cmr/cmr-spi/main/cmr-spi.jar"/>
                                <copy file="${user.home}/.m2/repository/com/redhat/ceylon/cmr/cmr-api/${version.com.redhat.ceylon.cmr}/cmr-api-${version.com.redhat.ceylon.cmr}.jar"
                                      tofile="../dist/com/redhat/ceylon/cmr/cmr-api/main/cmr-api.jar"/>
                                <copy file="${user.home}/.m2/repository/com/redhat/ceylon/cmr/cmr-impl/${version.com.redhat.ceylon.cmr}/cmr-impl-${version.com.redhat.ceylon.cmr}.jar"
                                      tofile="../dist/com/redhat/ceylon/cmr/cmr-impl/main/cmr-impl.jar"/>

                                <!-- Runtime -->
                                <copy file="../spi/target/modules-spi-${project.version}.jar"
                                      tofile="../dist/ceylon/modules/spi/main/ceylon.modules.spi.jar"/>
                                <copy file="../api/target/modules-api-${project.version}.jar"
                                      tofile="../dist/ceylon/modules/api/main/ceylon.modules.api.jar"/>
                                <copy file="../impl/target/modules-impl-${project.version}.jar"
                                      tofile="../dist/ceylon/modules/jboss/main/ceylon.modules.jboss.jar"/>

                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.jboss.modules</groupId>
            <artifactId>jboss-modules</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>ceylon.language</groupId>
            <artifactId>ceylon-language</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>ceylon</groupId>
            <artifactId>modules-spi</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>ceylon</groupId>
            <artifactId>modules-api</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>ceylon</groupId>
            <artifactId>modules-impl</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.shrinkwrap</groupId>
            <artifactId>shrinkwrap-api</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.shrinkwrap</groupId>
            <artifactId>shrinkwrap-spi</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.shrinkwrap</groupId>
            <artifactId>shrinkwrap-impl-base</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.test</groupId>
            <artifactId>jboss-test</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

</project>

